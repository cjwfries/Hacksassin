<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateProfile" >

    <TextView
        android:id="@+id/end_game_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_margin"
        android:text=""
        android:textColor="@color/holo_blue"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/return_menu_btn"
        android:layout_below="@+id/main_menu_name" >

        <ImageView
            android:id="@+id/end_game_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/skull" />
    </RelativeLayout>


    <Button
        android:id="@+id/return_menu_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onReturnMenuBtnClick"
        android:text="@string/return_menu_btn"
        android:textColor="@color/white" />

</RelativeLayout>